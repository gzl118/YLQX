@model MedicalApparatusManage.Models.T_QYSHModels
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Save</title>
    <script type="text/javascript" language="javascript">
        $(function () {
            var tag = $("#Tag").val();
            if (tag == "Details") {
                $("form input").prop("readonly", true);
                $("#divSave").hide();
            }
        });
        function Save() {
            var elements = document.forms['formT_QYSH'];
            var bl = validateCallback(elements);
            if (bl) {
                $.ajax({
                    type: "post",
                    dataType: "json",
                    url: "/T_QYSH/Save",
                    data: $("#formT_QYSH").serializeArray(),
                    success: dialogAjaxDone
                });
            }
        };
    </script>
</head>
<body>
    <div class="pageContent">
        <form id="formT_QYSH" method="post" onsubmit="return false;" class="pageForm required-validate-noalert">
            <div class="pageFormContent" layouth="58">
                @Html.HiddenFor(m => m.Tag, new { ID = "Tag", Name = "Tag" })
                @Html.HiddenFor(m=>m.DataModel.SHID,new { Name = "DataModel.SHID" }) 
            <div class="unit">
                <label>
                    审核时间：</label>
                @Html.TextBoxFor(m => m.DataModel.SHSJ, new {name = "SHSJ" })
            </div>
            <div class="unit">
                <label>
                    审核人：</label>
                @Html.TextBoxFor(m => m.DataModel.SHPS, new {name = "SHPS" })
            </div>
            <div class="unit">
                <label>
                    审核意见：</label>
                @Html.TextBoxFor(m => m.DataModel.SHYJ, new {name = "SHYJ" })
            </div>
            <div class="unit">
                <label>
                    审核状态：</label>
                @Html.TextBoxFor(m => m.DataModel.SHJG, new {name = "SHJG" })
            </div>
            <div class="unit">
                <label>
                    备注：</label>
                @Html.TextBoxFor(m => m.DataModel.SHBZ, new {name = "SHBZ" })
            </div>
            <div class="unit">
                <label>
                    审核企业ID：</label>
                @Html.TextBoxFor(m => m.DataModel.SHQYID, new {name = "SHQYID" })
            </div>
            </div>
            <div class="formBar">
                <ul>
                    <li>
                        <div class="button" id="divSave">
                            <div class="buttonContent">
                                <button value="保存" onclick="Save();">
                                    保存
                                </button>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="button">
                            <div class="buttonContent">
                                <button value="取消" class="close">
                                    取消
                                </button>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </form>
    </div>
</body>
</html>

