@model MedicalApparatusManage.Models.SysRoleResourceModels
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Save</title>
    <script type="text/javascript" language="javascript">
        $(function () {
            var tag = $("#Tag").val();
            if (tag == "Details") {
                $("form input").prop("readonly", true);
                $("#divSave").hide();
            }
        });
        function Save() {
            var elements = document.forms['formSysRoleResource'];
            var bl = validateCallback(elements);
            if (bl) {
                $.ajax({
                    type: "post",
                    dataType: "json",
                    url: "/SysRoleResource/Save",
                    data: $("#formSysRoleResource").serializeArray(),
                    success: dialogAjaxDone
                });
            }
        };
    </script>
</head>
<body>
    <div class="pageContent">
        <form id="formSysRoleResource" method="post" onsubmit="return false;" class="pageForm required-validate-noalert">
            <div class="pageFormContent" layouth="58">
                @Html.HiddenFor(m => m.Tag, new { ID = "Tag", Name = "Tag" })
                @Html.HiddenFor(m=>m.DataModel.AuthorId,new { Name = "DataModel.AuthorId" }) %>
            <div class="unit">
                <label>
                    RoleId：</label>
                @Html.TextBoxFor(m => m.DataModel.RoleId, new {name = "RoleId" })%>
            </div>
            <div class="unit">
                <label>
                    ResourceId：</label>
                @Html.TextBoxFor(m => m.DataModel.ResourceId, new {name = "ResourceId" })%>
            </div>
            <div class="unit">
                <label>
                    Authorized：</label>
                @Html.TextBoxFor(m => m.DataModel.Authorized, new {name = "Authorized" })%>
            </div>
            <div class="unit">
                <label>
                    Remark：</label>
                @Html.TextBoxFor(m => m.DataModel.Remark, new {name = "Remark" })%>
            </div>
            </div>
            <div class="formBar">
                <ul>
                    <li>
                        <div class="button" id="divSave">
                            <div class="buttonContent">
                                <button value="保存" onclick="Save();">
                                    保存
                                </button>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="button">
                            <div class="buttonContent">
                                <button value="取消" class="close">
                                    取消
                                </button>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </form>
    </div>
</body>
</html>

