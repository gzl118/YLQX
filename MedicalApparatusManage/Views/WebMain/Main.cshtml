@model MedicalApparatusManage.Models.WebMainModels
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title> 
    <style type="text/css">
        /* 欢迎页 - 快捷按钮 (图片+文字) */
        .links {
            display: block;
            position: relative;
            margin-top: 4px;
            margin-bottom: 4px;
        }

        .link {
            float: left;
            position: relative;
            width: 60px;
            height: 70px;
            margin-left: 10px;
            text-align: center;
            border: 1px solid #FFFFFF;
            cursor: pointer;
        }

            .link img {
                display: block;
                margin: 5px auto;
                width: 32px;
                height: 32px;
            }

        .linkover {
            border: 1px solid #d3d3d3;
            background: #f1f1f1;
        }

        .l-clear {
            clear: both;
        }

        .link .close {
            position: absolute;
            top: 1px;
            right: 1px;
            display: none;
            width: 11px;
            height: 11px;
            background: white;
            border: 1px solid #f1f1f1;
            background: url(/Content/icons/icon-close.gif);
        }

        .linkover .close {
            display: block;
        }

        .link .closeover {
            border: 1px solid #d3d3d3;
            background: url(/Content/icons/icon-close-over.gif);
        }
    </style>
    <script language="javascript" type="text/javascript">
        $(document).ready(function () {
            $(".link").mouseover(function () {
                $(this).find("div").css("display", "block");
            });
            $(".link").mouseout(function () {
                $(this).find("div").css("display", "none");
            });
        });
        //收藏删除
        function DeleteFavorite(favoriteId) {
            if (favoriteId != null) {
                alertMsg.confirm("确定要删除么？", {
                    okCall: function () {
                        $.ajax({
                        type: "post",
                        dataType: "json",
                        url: "/SysFavorite/Delete/" + favoriteId,
                        success: navTabAjaxDone
                        })
                    }
                });
            }
        }
    </script>   
</head>
<body>
    <div class="accountInfo">
        <p style="margin-left: 20px;">
            <span><a href="javascript:void(0);" target="_blank">欢迎使用医疗器械管理系统</a></span>
        </p>
        <p style="margin-left: 20px;">
            <a href="javascript:void(0);">
                @Model.UserName
            </a> 您好！
        </p>
    </div>
    <div class="pageFormContent" layouth="40" style="margin-right: 230px">
        <div class="links">
            @foreach (var item in Model.ListSysFavorite){
            //var ModuleID = Model.ListResource.First(m => m.ModuleName == item.FavoriteTitle).ModuleID;
            <div class="link">
                <img src="@item.Icon"  />
                <a href="@item.Url" rel="@item.FavoriteTitle" target="navTab">
                    @item.FavoriteContent
                </a>
                <div class="close" onclick="DeleteFavorite(@item.FavoriteID)" title="删除">
                </div>
            </div>
            }
    </div>
    <br />
    <div class="unit">
        <a class="button" href="/SysFavorite/Save/0/Add" mask="true" target="dialog" rel="dlg_page9">
            <span>增加快捷方式</span>
        </a>
    </div>
    </div>
</body>
</html>
