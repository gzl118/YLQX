                            @Html.TextBoxFor(m => m.DataModel.SupYXQJS, new { name = "SupYXQJS", @class = "Wdate", onfocus = "WdatePicker({ dateFmt: 'yyyy/MM/dd' })" })
                        </div>
                        <div class="unit">
                            <label>
                                身份证号：
                            </label>
                            @Html.TextBoxFor(m => m.DataModel.SupSFZH, new { name = "SupSFZH", style = "width:279px" })
                        </div>
                    </div>
                    <div style="width:96%;border:1px solid #ffffff;margin:5px;">
                        <div class="unit">
                            <div style="float:left;width:89%;">
                                <label>
                                    资质上传：
                                </label>
                                @*<a id="aSupZZSC" href='@Model.ZZSCPath' target="_blank">@Model.DataModel.SupZZSC</a>
                                    @Html.TextBoxFor(m => m.DataModel.SupZZSC, new { id = "txtSupZZSC", name = "SupZZSC", style = "width:81.3%;display:none;" })*@
                            </div>
                            @if (ViewData["IsLeader"].ToString() == "True" || Model.DataModel.SupStatus != 1)
                            {
                                <div style="float:right;width:11%;">
                                    <span id="uploadify"></span>
                                </div>
                            }
                        </div>
                        <div class="unit">
                            <label>
                                备注：
                            </label>
                            @Html.TextAreaFor(m => m.DataModel.SupBZ, new { name = "SupBZ", style = "width:81.3%;height:45px;" })
                        </div>
                    </div>
                    @*<div class="unit">
                            <label>
                                经营许可证：
                            </label>
                            @Html.TextBoxFor(m => m.DataModel.SupJYXKZ, new { name = "SupJYXKZ", style = "width:279px" })
                        </div>*@
                    @*<div class="unit">
                            <label>
                                供货企业类型：
                            </label>
                            @{
                            string[] GYSL = { "生产", "经营" };
                            List<selectlistitem>
                                GYSlist = new List<selectlistitem>
                                    ();
                                    foreach (string s in GYSL)
