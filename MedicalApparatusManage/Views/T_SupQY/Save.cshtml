                            @Html.TextBoxFor(m => m.DataModel.SupJYCS, new { name = "SupJYCS", style = "width:279px" })
                        </div>
                    </div>
                    <div style="width:48%;border:1px solid #ffffff;margin:5px;float:right;">
                        <div class="unit">
                            <label>
                                银行帐号：
