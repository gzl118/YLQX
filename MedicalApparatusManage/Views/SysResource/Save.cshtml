@model MedicalApparatusManage.Models.SysResourceModels
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Save</title>
    <script type="text/javascript" language="javascript">
        $(function () {
            var tag = $("#Tag").val();
            if (tag == "Details") {
                $("form input").prop("readonly", true);
                $("#divSave").hide();
            }
        });
        function Save() {
            var elements = document.forms['formSysResource'];
            var bl = validateCallback(elements);
            if (bl) {
                $.ajax({
                    type: "post",
                    dataType: "json",
                    url: "/SysResource/Save",
                    data: $("#formSysResource").serializeArray(),
                    success: dialogAjaxDone
                });
            }
        };
    </script>
</head>
<body>
    <div class="pageContent">
        <form id="formSysResource" method="post" onsubmit="return false;" class="pageForm required-validate-noalert">
            <div class="pageFormContent" layouth="58">
                @Html.HiddenFor(m => m.Tag, new { ID = "Tag", Name = "Tag" })
                @Html.HiddenFor(m=>m.DataModel.ResourceId,new { Name = "DataModel.ResourceId" }) 
            <div class="unit">
                <label>
                    菜单名称：</label>
                @Html.TextBoxFor(m => m.DataModel.ResourceName, new {name = "ResourceName" })
            </div>
            <div class="unit">
                <label>
                    菜单编码：</label>
                @Html.TextBoxFor(m => m.DataModel.ResourceCode, new {name = "ResourceCode" })
            </div>
            <div class="unit">
                <label>
                    所属菜单：</label>
                @Html.TextBoxFor(m => m.DataModel.ParentCode, new {name = "ParentCode" })
            </div>
            <div class="unit">
                <label>
                    路径：</label>
                @Html.TextBoxFor(m => m.DataModel.ResourceRemark, new {name = "ResourceRemark" })
            </div>
            <div class="unit">
                <label>
                    菜单排序：</label>
                @Html.TextBoxFor(m => m.DataModel.ResourceOrder, new {name = "ResourceOrder" })
            </div>
            <div class="unit">
                <label>
                    是否子菜单：</label>
                @Html.TextBoxFor(m => m.DataModel.ResourceNodeTage, new {name = "ResourceNodeTage" })
            </div>
            <div class="unit">
                <label>
                    是否根菜单：</label>
                @Html.TextBoxFor(m => m.DataModel.ResourceIsHavChild, new {name = "ResourceIsHavChild" })
            </div>
            </div>
            <div class="formBar">
                <ul>
                    <li>
                        <div class="button" id="divSave">
                            <div class="buttonContent">
                                <button value="保存" onclick="Save();">
                                    保存
                                </button>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="button">
                            <div class="buttonContent">
                                <button value="取消" class="close">
                                    取消
                                </button>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </form>
    </div>
</body>
</html>

