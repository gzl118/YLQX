                                            <option value="@item.Value">@item.Text</option>
                                        }}
                                </select>*@
                            <input type="text" name="" id="supqyName" style="width:279px" readonly="readonly" value="" />
                        </div>
                        <div class="unit">
                            <label>
                                产品编号：
