                </form>
                <div style="width:91%;border:1px solid #ffffff;margin:5px;">
                    <div><label id="lblYsdmx" style="width:50%;color:red;"></label></div>
                    @{if (Model.DataModel.YSID == 0)
                        {
                            <div class="button" style="float:right;">
