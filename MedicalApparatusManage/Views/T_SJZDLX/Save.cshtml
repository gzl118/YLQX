@model MedicalApparatusManage.Models.T_SJZDLXModels
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Save</title>
    <script type="text/javascript" language="javascript">
        $(function () {
            var tag = $("#Tag").val();
            if (tag == "Details") {
                $("form input").prop("readonly", true);
                $("#divSave").hide();
            }
        });
        function Save() {
            var elements = document.forms['formT_SJZDLX'];
            var bl = validateCallback(elements);
            if (bl) {
                $.ajax({
                    type: "post",
                    dataType: "json",
                    url: "/T_SJZDLX/Save",
                    data: $("#formT_SJZDLX").serializeArray(),
                    success: dialogAjaxDone
                });
            }
        };
    </script>
</head>
<body>
    <div class="pageContent">
        <form id="formT_SJZDLX" method="post" onsubmit="return false;" class="pageForm required-validate-noalert">
            <div class="pageFormContent" layouth="58">
                @Html.HiddenFor(m => m.Tag, new { ID = "Tag", Name = "Tag" })
                @Html.HiddenFor(m=>m.DataModel.LXID,new { Name = "DataModel.LXID" }) 
            <div class="unit">
                <label>
                    类型名称：</label>
                @Html.TextBoxFor(m => m.DataModel.LXMC, new {name = "LXMC" })
            </div>
            <div class="unit">
                <label>
                    标识：</label>
                @Html.TextBoxFor(m => m.DataModel.LXFLAG, new {name = "LXFLAG" })
            </div>
            <div class="unit">
                <label>
                    备注：</label>
                @Html.TextBoxFor(m => m.DataModel.LXBZ, new {name = "LXBZ" })
            </div>
            <div class="unit">
                <label>
                    分类：</label>
                @Html.TextBoxFor(m => m.DataModel.FLID, new {name = "FLID" })
            </div>
            </div>
            <div class="formBar">
                <ul>
                    <li>
                        <div class="button" id="divSave">
                            <div class="buttonContent">
                                <button value="保存" onclick="Save();">
                                    保存
                                </button>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="button">
                            <div class="buttonContent">
                                <button value="取消" class="close">
                                    取消
                                </button>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </form>
    </div>
</body>
</html>

