@model MedicalApparatusManage.Models.T_SHFWModels
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Save</title>
    <script type="text/javascript" language="javascript">
        $(function () {
            var tag = $("#Tag").val();
            if (tag == "Details") {
                $("form input").prop("readonly", true);
                $("#divSave").hide();
            }
        });
        function Save() {
            var elements = document.forms['formT_SHFW'];
            var bl = validateCallback(elements);
            if (bl) {
                $.ajax({
                    type: "post",
                    dataType: "json",
                    url: "/T_SHFW/Save",
                    data: $("#formT_SHFW").serializeArray(),
                    success: dialogAjaxDone
                });
            }
        };
    </script>
</head>
<body>
    <div class="pageContent">
        <form id="formT_SHFW" method="post" onsubmit="return false;" class="pageForm required-validate-noalert">
            <div class="pageFormContent" layouth="58">
                @Html.HiddenFor(m => m.Tag, new { ID = "Tag", Name = "Tag" })
                      @Html.HiddenFor(m=>m.DataModel.SHID,new { Name = "DataModel.SHID" })
                <div class="unit">
                    <label>
                        服务名称：
                    </label>
                    @Html.TextBoxFor(m => m.DataModel.FWMC, new { style = "width:260px" })
                </div>
            <div class="unit">
                <label>
                    客户单位：</label>
               @Html.DropDownListFor(m => m.DataModel.KHDWID, ViewData["CusQY"] as SelectList, "请选择", new { style = "width:270px" })
            </div>
            <div class="unit">
                <label>
                    地址：</label>
                @Html.TextBoxFor(m => m.DataModel.DZ, new {name = "DZ",style = "width:260px" })
            </div>
            <div class="unit">
                <label>
                    联系人：</label>
                @Html.TextBoxFor(m => m.DataModel.LXR, new { name = "LXR", style = "width:260px" })
            </div>
            <div class="unit">
                <label>
                    联系电话：</label>
                @Html.TextBoxFor(m => m.DataModel.LXDH, new { name = "LXDH", style = "width:260px" })
            </div>
            <div class="unit">
                <label>
                    订货日期：</label>
                @Html.TextBoxFor(m => m.DataModel.DHRQ, new { name = "DHRQ", @class = "Wdate", onfocus = "WdatePicker({ dateFmt: 'yyyy/MM/dd' })", style = "width:260px" })
            </div>
            <div class="unit">
                <label>
                    交货日期：</label>
                @Html.TextBoxFor(m => m.DataModel.JHRQ, new { name = "JHRQ", @class = "Wdate", onfocus = "WdatePicker({ dateFmt: 'yyyy/MM/dd' })", style = "width:260px" })
            </div>
            <div class="unit">
                <label>
                    服务完成日期：</label>
                @Html.TextBoxFor(m => m.DataModel.FWRQ, new { name = "FWRQ", @class = "Wdate", onfocus = "WdatePicker({ dateFmt: 'yyyy/MM/dd' })", style = "width:260px" })
            </div>
            <div class="unit">
                <label>
                    服务人：</label>
                @Html.TextBoxFor(m => m.DataModel.FWR, new { name = "FWR", style = "width:260px" })
            </div>
            <div class="unit">
                <label>
                    服务人：</label>
                @Html.TextBoxFor(m => m.DataModel.FWLXDH, new { name = "FWLXDH", style = "width:260px" })
            </div>
            <div class="unit">
                <label>
                    服务内容：</label>
                @Html.TextBoxFor(m => m.DataModel.FWNR, new { name = "FWNR", style = "width:260px;height:120px" })
            </div>
            <div class="unit">
                <label>
                    备注：</label>
                @Html.TextBoxFor(m => m.DataModel.BZ, new { name = "BZ", style = "width:260px;height:120px" })
            </div>
            </div>
            <div class="formBar">
                <ul>
                    <li>
                        <div class="button" id="divSave">
                            <div class="buttonContent">
                                <button value="保存" onclick="Save();">
                                    保存
                                </button>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="button">
                            <div class="buttonContent">
                                <button value="取消" class="close">
                                    取消
                                </button>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </form>
    </div>
</body>
</html>

