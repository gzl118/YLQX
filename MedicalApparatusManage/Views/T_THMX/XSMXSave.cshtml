@model MedicalApparatusManage.Models.T_THMXModels
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Save</title>
    <script type="text/javascript" language="javascript">
        $(function () {
            var tag = $("#Tag").val();
            if (tag == "Details") {
                $("form input").prop("readonly", true);
                $("#divSave").hide();
            }
        });
        function Save() {
            var elements = document.forms['formT_XSTHMX'];
            var bl = validateCallback(elements);
            if (bl) {
                $.ajax({
                    type: "post",
                    dataType: "json",
                    url: "/T_THMX/XSMXSave",
                    data: $("#formT_XSTHMX").serializeArray(),
                    success: dialogAjaxDone
                });
            }
        };
    </script>
</head>
<body>
    <div class="pageContent">
        <form id="formT_XSTHMX" method="post" onsubmit="return false;" class="pageForm required-validate-noalert">
            <div class="pageFormContent" layouth="58">
                @Html.HiddenFor(m => m.Tag, new { ID = "Tag", Name = "Tag" })
                @Html.HiddenFor(m => m.DataModel.MXID, new { Name = "DataModel.MXID" })
                @Html.HiddenFor(m => m.DataModel.FLAG, new { Name = "DataModel.FLAG" })
                <div class="unit">
                    <label>
                        仓库ID：
                    </label>
                    @Html.TextBoxFor(m => m.DataModel.CKID, new { name = "CKID" })
                </div>
                <div class="unit">
                    <label>
                        产品ID：
                    </label>
                    @Html.TextBoxFor(m => m.DataModel.CPID, new { name = "CPID" })
                </div>
                <div class="unit">
                    <label>
                        退货ID：
                    </label>
                    @Html.TextBoxFor(m => m.DataModel.THID, new { name = "THID" })
                </div>
                <div class="unit">
                    <label>
                        产品数量：
                    </label>
                    @Html.TextBoxFor(m => m.DataModel.CPNUM, new { name = "CPNUM" })
                </div>
                <div class="unit">
                    <label>
                        备注：
                    </label>
                    @Html.TextBoxFor(m => m.DataModel.BZ, new { name = "BZ" })
                </div>
            </div>
            <div class="formBar">
                <ul>
                    <li>
                        <div class="button" id="divSave">
                            <div class="buttonContent">
                                <button value="保存" onclick="Save();">
                                    保存
                                </button>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="button">
                            <div class="buttonContent">
                                <button value="取消" class="close">
                                    取消
                                </button>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </form>
    </div>
</body>
</html>
